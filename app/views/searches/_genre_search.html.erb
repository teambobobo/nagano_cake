<div class="genre_search">
  <table class="table table-borderless" style="border: solid 2px #4e454a; width: 180px;">
    <tr>
      <th style="border: solid 2px #4e454a; ">ジャンル検索</th>
    </tr>

    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get %></td>
      </tr>
      <% end %>
    <% end %>

  </table>
</div>