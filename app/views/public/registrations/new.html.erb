<div class="container mt-5">
  <div class="row mx-auto">
    <div class="col-md-8 offset-2">
      <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <table>
          <tbody>
            <tr>
              <td>名前</td>
              <td><%= f.label :（姓） %></td>
              <td><%= f.text_field :last_name, autofocus: true, placeholder:'令和' %></td>
              <td><%= f.label :（名） %></td>
              <td><%= f.text_field :first_name, placeholder:'道子' %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.label :（セイ） %></td>
              <td><%= f.text_field :kana_last_name, placeholder:'レイワ' %></td>
              <td><%= f.label :（メイ） %></td>
              <td><%= f.text_field :kana_first_name, placeholder:'ミチコ' %></td>
            </tr>
            <tr>
              <td><%= f.label :メールアドレス %></td>
              <td></td>
              <td><%= f.email_field :email, autocomplete: "email", placeholder:'sample@example.com' %></td>
            </tr>
            <tr>
              <td><%= f.label :郵便番号（ハイフンなし） %></td>
              <td></td>
              <td><%= f.text_field :post_cord, placeholder:'00000000' %></td>
            </tr>
            <tr>
              <td><%= f.label :住所 %></td>
              <td></td>
              <td><%= f.text_field :address, placeholder:'東京都渋谷区代々木神園町0-0' %></td>
            </tr>
            <tr>
              <td><%= f.label :電話番号（ハイフンなし） %></td>
              <td></td>
              <td><%= f.text_field :phone_number, placeholder:'00000000000' %></td>
            </tr>
            <tr>
              <td>
                <%= f.label :パスワード（６文字以上） %>
                <% if @minimum_password_length %>
                <em><% @minimum_password_length %></em>
                <% end %>
              </td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label :パスワード（確認用） %></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.submit "Sign up", class:"btn btn-success" %></td>
            </tr>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

  <%= render "public/shared/links" %>
