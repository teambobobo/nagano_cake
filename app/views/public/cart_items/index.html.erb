<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <h3>ショッピングカート</h3>
    </div>
      <% if @cart_item.exists? %>
    <div class="col-md-2 offset-6">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md">
      <table class="table table-bordered">
        <thead class="table table-active">
          <tr>
            <th width="2000">商品名</th>
            <th width="500">単価（税込）</th>
            <th width="500">数量</th>
            <th width="500">小計</th>
            <th width="500"></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_item.each do |cart_item| %>
          <tr>
            <td><%#= image_tag cart_item.item.image %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.after_tax %></td>
            <td>
              <%= form_with model: CartItem, url: cart_item_path(cart_item), method: :patch do |f| %>
                <%= f.number_field :amount, value: cart_item.amount, min:1, max:100 %>
                <%= f.submit "変更", class: "btn btn-success" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal%></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
            <% @total += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-3 offset-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>合計金額</td>
            <td><%= @total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md text-center">
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
      <% else %>
        カートは空です。
      <% end %>
</div>