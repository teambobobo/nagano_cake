<div class="container mt-5"></div>
  <div class="row mx-auto">
    <div class="col-md-6 offset-3">
      <h3>ショッピングカート</h3>
      <% if @cart_item.exists? %>
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_item.each do |cart_item| %>
            <tr>
              <td><%#= image_tag cart_item.item.image %><%= cart_item.item.name %></td>
              <td><%= cart_item.item.after_tax %></td>
              <td>
                <%= form_with model: CartItem, url: cart_item_path(cart_item), method: :patch do |f| %>
                  <%= f.number_field :amount, value: cart_item.amount, min:1, max:100 %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal%></td>
              <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn btn-danger' %></td>
              <% @total += cart_item.subtotal %>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td>合計金額</td>
              <td><%= @total %></td>
            </tr>
          </tbody>
        </table>
        <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        <% else %>
          カートは空です。
        <% end %>
    </div>
  </div>
</div>
