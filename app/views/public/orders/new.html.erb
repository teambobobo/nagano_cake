<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8">
      <h3>注文情報入力</h3>
      <%= form_with model: @order, url: orders_check_path, method: :post do |f| %>
      
        <h4>支払方法</h4>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
        <br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer] %>
      
        <h4>お届け先</h4>
        <%= f.radio_button :address_option, 1 %>
        <%= f.label :address_option, "ご自身の住所" %>
        <%= current_customer.post_cord + current_customer.address + current_customer.last_name + current_customer.first_name %>
        <br>
        <%= f.radio_button :address_option, 2 %>
        <%= f.label :address_option, "登録済み住所から選択" %>
        <%= f.collection_select :address_id, current_customer.addresses.all, :id, :address_display %>
        <br>
        <%= f.radio_button :address_option, 3 %>
        <%= f.label :address_option, "新しいお届け先" %>
        <table>
          <tr>
            <tb>郵便番号(ハイフンなし)</tb>
            <tb><%= f.text_field :post_code %></tb>
          </tr>
          <tr>
            <tb>住所</tb>
            <tb><%= f.text_field :address %></tb>
          </tr>
          <tr>
            <tb>宛名</tb>
            <tb><%= f.text_field :name %></tb>
          </tr>
        </table>
        <br>
        <%= f.submit "確認画面へ進む", class:"btn btn-primary"%>
      
      <% end %>
    </div>
  </div>
</div>