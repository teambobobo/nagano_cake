<div class="container mt-5">
  <h3>注文確認画面</h3>
  <div class="row">
    <div class="col-md-8">
      <table class="table-bordered", style="border: solid 2px black;">
        <thead height="50">
          <tr class="table-secondary">
            <th width="2000">商品名</th>
            <th width="500">単価(税込)</th>
            <th width="500">数量</th>
            <th width="500">小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart_item| %>
        <tbody height="50">
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: '80x50' %>
              <%= cart_item.item.name %>
            </td>
            <td>¥<%= cart_item.item.after_tax.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td>¥<%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% @total += cart_item.subtotal %>
        </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table-bordered", style="border: solid 2px black;", width="250" height="150">
        <tr>
          <td class="table-secondary">送料</td>
          <td>¥<%= @postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-secondary">商品合計</td>
          <td>¥<%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td class="table-secondary">請求金額</td>
          <td>¥<%= (@postage + @total).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <table>
        <tr>
          <th>
            <h5><strong>支払方法</strong></h5>
          </th>
          <td> &emsp; </td>
          <td>
            <%= Order.payment_methods_i18n[@payment_method] %>
          </td>
        </tr>
      </table>
      <table class="mt-3">
        <tr>
          <th>
            <h5><strong>お届け先</strong></h5>
          </th>
          <td> &emsp; </td>
          <td>
            <%= '〒' + @order.post_code + ' ' + @order.address + ' ' + @order.address_name %>
          </td>
        </tr>
      </table>

      <div class="form mt-3 mx-auto">
        <%= form_with model: @order, url: orders_path, method: :post do |f| %>
          <%= f.hidden_field :payment_method, :value => @payment_method %>
          <%= f.hidden_field :address_name, :value => @order.address_name %>
          <%= f.hidden_field :post_code, :value => @order.post_code %>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= f.hidden_field :total_price, :value => @postage + @total %>
          <%= f.hidden_field :customer_id, :value => @order.customer_id %>
          <%= f.hidden_field :postage, :value => @postage %>
          <%= f.submit "注文を確定する", class:"btn btn-success"%>
        <% end %>
      </div>
    </div>
  </div>
</div>