<h3>注文確認画面</h3>

<table class="table-bordered">
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%#= image_tag cart_item.item.image %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.after_tax %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <% @total += cart_item.subtotal %>
  <% end %>
</table>

<table class="table-bordered">
  <tr>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求金額</th>
  </tr>
  <tr>
    <td><%= @postage %></td>
    <td><%= @total %></td>
    <td><%= @postage + @total %></td>
  </tr>
</table>

<h4>支払方法</h4>
<%= Order.payment_methods_i18n[@payment_method] %>

<h4>お届け先</h4>
<%= '〒' + @order.post_code + ' ' + @order.address + ' ' + @order.address_name %>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>
  <%= f.hidden_field :payment_method, :value => @payment_method %>
  <%= f.hidden_field :address_name, :value => @order.address_name %>
  <%= f.hidden_field :post_code, :value => @order.post_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :total_price, :value => @postage + @total %>
  <%= f.hidden_field :customer_id, :value => @order.customer_id %>
  <%= f.hidden_field :postage, :value => @postage %>
  <%= f.submit "注文を確定する", class:"btn btn-success"%>
<% end %>