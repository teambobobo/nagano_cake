<div class="container py-5", style="margin-left: 230px;">
  <div class="row">
    <div class="col-md-7" style="margin-left: 150px;">
      <%#= render 'public/shared/error_messages', resource: resource %>
      <% flash.each do |type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{type == 'notice' ? 'success' : 'danger'}") %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h5 class="p-2">ログイン</h5>
      <h6 class="p-3">会員の方はこちらからログイン</h6>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
      <table>
        <tr>
          <td class="p-1"><%= f.label :メールアドレス %></td>
          <td class="p-1"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'sample@example.com', size: "40" %></td>
        </tr>
        <tr>
          <td class="p-1"><%= f.label :パスワード %></td>
          <td class="p-1"><%= f.password_field :password, autocomplete: "current-password", size: "40" %></td>
        </tr>
        <tr>
          <td></td>
          <td class="pt-4"><%= f.submit "ログイン", class: "btn btn-primary", style: "width: 150px;" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h6 class="p-3">会員登録がお済みでない方</h6>
    </div>
    <div class="col-md-8 mx-auto">
      <%= link_to "こちら", new_registration_path(resource_name) %> から新規登録を行ってください。
    </div>
  </div>
</div>


