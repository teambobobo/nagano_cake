<%= form_with model: address do |f| %>
      <div>
        <label>郵便番号(ハイフンなし)</label>
        <%= f.text_field :post_cord %>
      </div>
      <div>
        <label>住所</label>
        <%= f.text_field :address %>
      </div>
      <div>
        <label>宛名</label>
        <%= f.text_field :name %>
      </div>
      <% if f.object.new_record? %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% else %>
        <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
      <% end %>
      
<% end %>