<%= form_with model: address do |f| %>
  <table>
    <tr>
      <td>
        <%= f.label :post_cord, "郵便番号（ハイフンなし）" %>
      </td>
      <td>
        <%= f.text_field :post_cord %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>
        <%= f.label :address, "住所" %>
      </td>
      <td colspan="2">
        <%= f.text_field :address,size: "50" %>
      </td>
      <td></td>
    </tr>
    <tr>
      <td>
        <%= f.label :name, "宛名" %>
      </td>
      <td>
        <%= f.text_field :name %>
      </td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td>
        <% if f.object.new_record? %>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        <% else %>
          <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>