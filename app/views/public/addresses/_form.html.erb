<%= form_with model: address do |f| %>
   <table>
      <div>
        <label>郵便番号（ハイフンなし）</label>
        &emsp;&emsp;<%= f.text_field :post_cord %>
      </div>
      <div>
        <label>住所</label>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :address, size: "50" %>
      </div>
      <div>
        <label>宛名</label>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.text_field :name %>
        <% if f.object.new_record? %>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.submit "新規登録", class: 'btn btn-success' %>
      <% else %>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<%= f.submit "変更内容を保存", class: 'btn btn-success' %>
      <% end %>
      </div>
      </table>
<% end %>