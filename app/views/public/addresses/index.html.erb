<h2>配送先登録/一覧</h2>
      <%= form_with model: Address.new do |f| %>
      <div>
        <label>郵便番号(ハイフンなし)</label>
        <%= f.text_field :post_code %>
      </div>
      <div>
        <label>住所</label>
        <%= f.text_field :address %>
      </div>
      <div>
        <label>宛名</label>
        <%= f.text_field :name %>
      </div>
        <%= f.submit '新規登録', class: "btn btn-success" %>
        <% end %>
        
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>        
<% @addresses.each do |address| %>        
  <tbody>
    <tr>
      <td><%= address.post_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
    </tr>
  </tbody>
<% end %>