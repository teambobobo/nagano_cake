<h2>商品新規登録</h2>

<%= form_with model: ,local:true do |f| %>
  <div class="form-group">
    <%= f.label "商品画像" %>
    <%= f.file_field :image, accept: "image/*", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name, placeholder: "商品名", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: '選択してください'}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label "税抜価格" %>
    <%= f.text_field :before_tax, placeholder: "1000", class: 'form-control' %>円
  </div>

  <div class="form-group">
    <%= f.label "販売ステータス" %>
    <%= f. :is_sale, class: 'form-control' %>
    <%= f.radio_button :is_active, value: true %>
              <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
              <%= f.radio_button :is_active, value: false %>
              <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
