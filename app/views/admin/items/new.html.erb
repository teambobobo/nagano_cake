<h2>商品新規登録</h2>

<%= form_with model: ,local:true do |f| %>
  <div class="form-group">
    <%= f.label "商品画像" %>
    <%= f.field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "商品名" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "商品説明" %>
    <%= f.text_area :introduction, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "ジャンル" %>
    <%= f. :genre,class: 'form-control book_category' %>
  </div>

  <div class="form-group">
    <%= f.label "税抜価格" %>
    <%= f. :before_tax, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label "販売ステータス" %>
    <%= f. :is_sale, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
