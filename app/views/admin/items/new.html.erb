<% if @item.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@item.errors.count, "error") %> prohibited this obj from being saved:</h3>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<!--管理者側／商品新規登録画面-->
<!--！新規登録時、登録できる画像のサイズがまだ決まってない（好きなサイズで登録できる状態）-->
    <h2>商品新規登録</h2>

    <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :image, "商品画像" %>
        <p><%= f.file_field :image, accept: "image/*" %></p>
      </div>

      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, placeholder: "商品名", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "商品説明" %>
        <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :genre, "ジャンル" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: '選択してください' }, {class: 'form-control'} %>
      </div>

      <div class="form-group">
        <%= f.label :before_tax, "税抜価格" %>
        <%= f.number_field :before_tax, placeholder: "1000", class: 'form-control' %>円
      </div>

      <div class="form-group">
        <%= f.label :is_sale, "販売ステータス" %>
        <%= f.radio_button :is_sale, true %>
        <%= f.label :is_sale, "販売中", {value: :true, style: "display: inline-block;"} %>
        <%= f.radio_button :is_sale, false %>
        <%= f.label :is_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>