<!--管理者側／商品詳細画面-->
<div class='container py-5'>
  <div class='row'>
    <div class="col-md-4">
      <h3>商品詳細</h3>

      <!--商品登録・更新成功のアラートメッセージ-->
      <% if flash[:admin_item] %>
        <div class="alert alert-success">
          <%= flash[:admin_item] %>
        </div>
      <% end %>

      <div class="my-5">
        <%= image_tag @item.image, size: "300x200" %>
      </div>
    </div>

    <div class="col-md-8">
      <table class="mt-5" style="border-spacing: 20px 20px; border-collapse: separate;">
        <tr>
          <td width="120">商品名</td>
          <td style="font-size: 25px;"><%= @item.name %></td>
        </tr>
        <tr>
          <td width="120">商品説明</td>
          <td style="font-size: 17px;"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td width="120">ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td width="120">税抜価格<br>(税込価格)</td>
          <td><big><%= @item.before_tax.to_s(:delimited) %>（<%= @item.after_tax.to_s(:delimited) %>）</big>円</td>
        </tr>
        <tr>
          <td width="120">販売ステータス</td>
          <% if @item.is_sale %>
            <td class="text-success"><strong><big>販売中</big></strong></td>
          <% else %>
            <td class="text-muted"><strong><big>販売停止</big></strong></td>
          <% end %>
        </tr>
      </table>
    </div>

    <div class="col text-center">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>