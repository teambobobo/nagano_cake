<h3>ジャンル一覧・追加</h3>

<!--ジャンル登録・更新成功のアラートメッセージ-->
<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<!--ジャンル追加機能-->
<%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
  <!--登録失敗のメッセージ-->
  <% if @genre.errors.any? %>
    <div class="alert alert-danger" role="alert">ジャンル名を入力してください</div>
  <% end %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit'新規登録',class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<!--ジャンル一覧-->
<table class="table">
  <thead class="table-active">
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
