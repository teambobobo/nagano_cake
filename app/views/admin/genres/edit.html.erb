<div class="container mt-5"></div>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mb-5">ジャンル編集</h3>
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <table>
          <tbody>
            <tr>
              <tb><%= f.label :"ジャンル名", class: "mr-3" %></tb>
              <tb><%= f.text_field :name, class: "mr-5" %></tb>
              <tb><%= f.submit "変更を保存", class: "btn btn-primary" %></tb>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>